// Macro definition\n
`define BUS_WIDTH = 8;\n
\n
// Module definition\n
module block(\n
  input                   clk,\n
  input                   rst_n,\n
  input  [`BUS_WIDTH-1:0] data_in,\n
  output [`BUS_WIDTH-1:0] data_out\n
);\n
  \n
  always @(posedge clk or negedge rst_n) begin\n
\n
    if (~rst_n) begin\n
      data_out <= 8\'b0;\n
    end else begin\n
      data_out <= data_in;\n
    end\n
    \n
    if (~rst_n)\n
      data_out <= 8\'b0;\n
    else\n
      data_out <= data_in;\n
    \n
    if (~rst_n)\n
      begin\n
        data_out <= 8\'b0;\n
      end\n
    else\n
      begin\n
        data_out <= data_in;\n
      end\n
\n
  end\n
  \n
endmodule\n
\n
