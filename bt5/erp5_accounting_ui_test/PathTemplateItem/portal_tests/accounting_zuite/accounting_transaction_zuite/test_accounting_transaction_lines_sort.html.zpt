</tr>
<tr>
  <td>clickAndWait</td>
  <td>//button[@name='Base_edit:method']</td>
  <td></td>
</tr>
<tr>
  <td>assertPortalStatusMessage</td>
  <td>Data updated.</td>
  <td></td>
</tr>

<!-- now we will add one more line, and it will not be inserted between the
other lines
-->
<tr>
  <td>selectAndWait</td>
  <td>select_action</td>
  <td>Add Accounting Transaction Lines</td>
</tr>
<tr>
  <td>clickAndWait</td>
