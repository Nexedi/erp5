</tr>
<tr>
  <td>verifyText</td>
  <td>//span[@class="listbox-current-page-total-number"]</td>
  <td>56 records</td>
</tr>
<!-- check first line -->
<tr>
  <td>verifyText</td>
  <td>//tr[@class='listbox-data-line-0 DataA']/td[1]</td>
  <td>Client 1 Sale Invoice</td>
</tr>
<tr>
  <td>verifyText</td>
  <td>//tr[@class='listbox-data-line-0 DataA']/td[2]</td>
