</tr>
<!-- this is the same as the last net_balance from the previous page -->
<tr>
  <td>verifyFloat</td>
  <td>//tr[@class='listbox-data-line-0 DataA']/td[13]</td>
  <td>133100.00</td>
</tr>

<!-- Stats should not change -->
<tr>
  <td>verifyFloat</td>
  <td>//tr[@class='listbox_stat_line listbox-stat-line']/td[9]</td>
