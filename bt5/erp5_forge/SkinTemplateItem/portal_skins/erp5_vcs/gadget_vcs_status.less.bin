div[data-gadget-url$="gadget_vcs_status.html"] {

  li {
    li {
      padding-left: 1em;
    }
    label {
      display: inline-block;

      input {
        padding: 0 6pt;
      }

      &:first-child:not(:last-child) {
        // Hide open/close checkboxes
        input {
          display: none;
        }
      }
      &:last-child:before {
        content: "* ";
      }
    }
  }

  button {
    color: #212529;
    padding: 3pt;
    border: 1px solid rgba(0, 0, 0, 0.14);
    border-radius: 0.325em;
    display: inline-block;
    margin-right: 6pt;

    &:disabled, &[disabled] {
      color: #999999;
    }

    &:before {
      padding-right: 0.2em;
    }
  }

}
