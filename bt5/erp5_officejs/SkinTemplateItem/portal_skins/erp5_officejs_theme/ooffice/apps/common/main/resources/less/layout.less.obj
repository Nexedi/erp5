.layout-ct {
    position: absolute;
    width: 100%;
    height: 100%;

    .layout-item, .layout-resizer {
        position: absolute;
    }

    .layout-resizer {
        z-index: @zindex-dropdown - 10;
        background: @gray-light;

        &.move {
            opacity: 0.4;
        }
    }

    &.vbox {
        .layout-item, > .layout-resizer {
            left: 0;
            width: 100%;
        }

        > .layout-resizer {
            height: 4px;
            cursor: row-resize;
            border-top: solid 1px @gray-dark;
            border-bottom: solid 1px @gray-dark;
        }
    }

    &.hbox {
        .layout-item, > .layout-resizer {
            top: 0;
            height: 100%;
        }

        > .layout-resizer {
            width: 4px;
            cursor: col-resize;
            border-left: solid 1px @gray-dark;
            border-right: solid 1px @gray-dark;
        }
    }
}