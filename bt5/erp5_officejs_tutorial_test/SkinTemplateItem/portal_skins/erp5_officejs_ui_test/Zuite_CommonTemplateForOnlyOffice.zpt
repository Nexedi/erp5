  <tal:block metal:define-macro="wait_for_load_presentation">
    <tr>
      <td colspan="3"><b>Wait for load OnlyOffice</b></td>
    </tr>
    <tr>
      <td>waitForElementPresent</td>
      <td>//div[@class='asc-loadmask-title']</td>
