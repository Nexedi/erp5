<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Test RenderJS UI</title>
</head>
<body>
<table cellpadding="1" cellspacing="1" border="1">
<thead>
<tr><td rowspan="1" colspan="3">Test RenderJS UI</td></tr>
</thead><tbody>
<tal:block metal:use-macro="here/Zuite_CommonTemplate/macros/init" />

<!-- Clean Up -->
<tr>
  <td>open</td>
  <td>&#36;{base_url}/foo_module/ListBoxZuite_reset</td>
  <td></td>
</tr>
<tr>
  <td>assertTextPresent</td>
  <td>Reset Successfully.</td>
  <td></td>
</tr>

<!-- Initialize -->
<tr>
  <td>open</td>
  <td>&#36;{base_url}/foo_module/FooModule_createObjects?num:int=2</td>
  <td></td>
</tr>
<tr><td>waitForTextPresent</td><td>Created Successfully.</td><td></td></tr>
<tr>
  <td>open</td>
  <td>&#36;{base_url}/web_site_module/renderjs_runner/#/foo_module/0?editable=true</td>
  <td></td>
</tr>
<tr><td>waitForTextPresent</td><td>Save</td><td></td></tr>

<!-- Set successor value of foo_module/0 to foo_module/1 -->
<tr>
  <td>storeEval</td>
  <td>document.getElementById("selenium_myiframe").contentWindow.document.location.href = "&#36;{base_url}/foo_module/0/setSuccessor?value=foo_module/1"</td>
  <td>dummy</td>
</tr>
<tr>
  <td>pause</td>
  <td>1000</td>
  <td></td>
</tr>

<!-- Go to Relation Fields tab directly (without using other dialogs like "Views") -->
<tr>
  <td>click</td>
  <td>//a[text()="Relation Fields"]</td>
  <td></td>
</tr>

<!-- Check the relation field is update to date -->
<tr>
  <td>waitForElementPresent</td>
  <td>//input[@name='field_my_successor_title' and @value='Title 1']</td>
  <td></td>
</tr>

<!-- Set successor value of foo_module/0 to empty -->
<tr>
  <td>storeEval</td>
  <td>document.getElementById("selenium_myiframe").contentWindow.document.location.href = "&#36;{base_url}/foo_module/0/setSuccessor?value="</td>
  <td>dummy</td>
</tr>
<tr>
  <td>pause</td>
  <td>1000</td>
  <td></td>
</tr>

<!-- Update the form view by clicking on the same tab link -->
<tr>
  <td>click</td>
  <td>//a[text()="Relation Fields"]</td>
  <td></td>
</tr>
<tal:block metal:use-macro="here/Zuite_CommonTemplateForRenderjsUi/macros/wait_for_content_loaded" />

<!-- The field should be updated to empty -->
<!-- Here waitForTextNotPresent or waitForElementPresent passes no matter the state of the field, because the field is updated in javascript (not in html attributes) and so the selection //input[@value=''] does not work. -->
<!-- When not passing, you can see that the plane is correctly replaced by a magnifying glass, as if the field was only partly updated -->
<tr>
  <td>storeEval</td>
  <td>(function () { var value_selector = "input[name=field_my_successor_title]", expected = "", found = document.getElementById("selenium_myiframe").contentWindow.document.querySelector(value_selector).value; if (found !== expected) throw new Error("in " + JSON.stringify(value_selector) + " found " + JSON.stringify(found) + " expected " + JSON.stringify(expected)); }())</td>
  <td>dummy</td>
</tr>

</tbody></table>
</body>
</html>