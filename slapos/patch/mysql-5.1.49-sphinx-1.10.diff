+#if MYSQL_VERSION_ID < 50100
+		LOC_STATS ( "stats", 5, "no query has been executed yet", sizeof("no query has been executed yet")-1 );
+#endif
+	}
+
+#if MYSQL_VERSION_ID < 50100
+	send_eof(thd);
+#endif
+
+	SPH_RET(FALSE);
+}
